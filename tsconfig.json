{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "types": ["node", "mocha", "chai", "sinon", "sinon-chai"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
